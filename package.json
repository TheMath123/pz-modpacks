{
  "name": "monorepo-template",
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@org/linter": "workspace:*",
    "@types/bun": "catalog:",
    "turbo": "2.6.3",
    "typescript": "5.9.3"
  },
  "packageManager": "bun@1.3.2",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "preview": "turbo run preview",
    "type:check": "turbo type:check",
    "docker:down": "turbo run docker:down",
    "format": "biome format",
    "lint": "biome lint",
    "check": "biome check",
    "check:write": "biome check --write .",
    "build:envs": "bun run scripts/build-envs.ts",
    "delete:modules": "bun run scripts/delete-node-modules.ts"
  },
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "react": "19.2.0",
      "react-dom": "19.2.0",
      "tailwindcss": "4.1.17",
      "@types/bun": "1.3.2",
      "@types/react": "19.2.2",
      "@types/react-dom": "19.2.2"
    }
  }
}
